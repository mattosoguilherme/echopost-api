generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String
  role  Role   @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Token {
  id           Int       @id @default(autoincrement())
  platform     Platform
  accessToken  String    @db.Text
  refreshToken String?
  expiresAt    DateTime?
  scope        String?
  tokenType    String?
  userId       String? // Opcional: ID do usu√°rio associado
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Post {
  id          Int        @id @default(autoincrement())
  platform    Platform
  content     String
  mediaUrl    String?
  scheduledAt DateTime
  status      PostStatus @default(PENDING)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Platform {
  youtube
  instagram
  tiktok
}

enum PostStatus {
  PENDING
  PUBLISHED
  FAILED
}
